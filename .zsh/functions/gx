# gx just because it's short
# all the things I use a lot to see the full state of things in one go
function gx() {
	echo ''
	echo '####### STATUS ######'
	git st

	echo ''
	echo '####### DIFF ######'
	git diff --patch-with-stat

	echo ''
	echo '####### STAGED ######'
	git diff --patch-with-stat --cached
}
