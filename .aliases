alias ll="ls -lh"
alias la="ls -alh"
alias md='mkdir -p'
alias rd='rmdir'
alias cd..='cd ..'
alias ..='cd ..'

# Get tmux to pass 256 colours through to vim
# ref http://unix.stackexchange.com/a/1098
alias tmux="tmux -2"

# rails
alias be="bundle exec"
alias groutes='rake routes | ag $@'
alias rs="NO_COVER=true bundle exec rspec -fd"
alias beg="bundle exec guard -i"

# git tools
alias gk="gitk &"
alias gka="gitk --all &"
alias ta="tig --all"

# git
alias g="git"
alias gf="git fa"
alias gl="git fa && git rebase"
alias ga="git add -A"
alias gap="git add -p"
alias gb="git checkout -b"
alias gs="git st"
alias gsh="git show"
alias gd="git diff"
alias gdc="git diff --cached"
alias gc="git commit -v"
alias gca="git commit -av"
alias gcp="git commit -pv"
alias gra="git ra"
alias graa="git ra -a"
alias gr="git rebase --interactive origin/master"
alias gp="git push"
alias gpu="git push --set-upstream"
alias gpf="git push --force-with-lease"

# hub
alias pr="hub pull-request"
alias prc="hub pr checkout"

# tmuxinators
alias mpub="tmuxinator dfe"
